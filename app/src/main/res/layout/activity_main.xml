<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgGifBgHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:src="@drawable/bg_app" />

            <RelativeLayout
                android:id="@+id/layoutContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.core.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="@dimen/_70sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            app:layout_constraintBottom_toTopOf="@id/llBanner"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:visibility="gone"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imgTitle"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_bg_title"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <TextView
                                        android:id="@+id/tv_title"
                                        android:layout_width="@dimen/_170sdp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="20dp"
                                        android:ellipsize="marquee"
                                        android:focusable="true"
                                        android:focusableInTouchMode="true"
                                        android:fontFamily="@font/linotte_bold"
                                        android:gravity="center"
                                        android:marqueeRepeatLimit="marquee_forever"
                                        android:scrollHorizontally="true"
                                        android:shadowColor="@color/black"
                                        android:shadowRadius="5"
                                        android:singleLine="true"
                                        android:text="@string/spinner"
                                        android:textColor="@color/white"
                                        android:textSize="40sp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <LinearLayout
                                    android:id="@+id/llNative"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    app:layout_constraintBottom_toBottomOf="parent">

                                    <FrameLayout
                                        android:id="@+id/fr_ads"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:orientation="vertical">

                                    </FrameLayout>
                                </LinearLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:id="@+id/btn_home_finger_picker"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="20dp"
                                        android:padding="1dp"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="110dp"
                                            android:background="@drawable/custom_bg_button">

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center_horizontal"
                                                android:layout_marginHorizontal="20dp"
                                                android:layout_weight="2"
                                                android:fontFamily="@font/linotte_semi_bold"
                                                android:gravity="center_vertical|start"
                                                android:lineSpacingExtra="10dp"
                                                android:text="@string/finger_picker"
                                                android:textColor="@color/black"
                                                android:textSize="22sp" />

                                            <ImageView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="2"
                                                android:adjustViewBounds="true"
                                                android:paddingStart="10dp"
                                                android:paddingTop="10dp"
                                                android:paddingEnd="10dp"
                                                android:src="@drawable/img_finger_picker_home" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/img_new_home"
                                        app:layout_constraintStart_toStartOf="@id/btn_home_finger_picker"
                                        app:layout_constraintTop_toTopOf="@id/btn_home_finger_picker" />
                                </androidx.constraintlayout.widget.ConstraintLayout>


                                <LinearLayout
                                    android:id="@+id/btnDefault"
                                    android:layout_width="match_parent"
                                    android:layout_height="110dp"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_marginVertical="24dp"
                                    android:orientation="horizontal"
                                    android:paddingEnd="5dp"
                                    tools:ignore="RtlSymmetry">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:background="@drawable/custom_bg_button"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/tv_default"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center_horizontal"
                                                android:layout_marginHorizontal="20dp"
                                                android:layout_weight="2"
                                                android:fontFamily="@font/linotte_semi_bold"
                                                android:gravity="center_vertical|start"
                                                android:lineSpacingExtra="10dp"
                                                android:text="@string/predefined_roulette"
                                                android:textColor="@color/black"
                                                android:textSize="22sp" />

                                            <ImageView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="2"
                                                android:adjustViewBounds="true"
                                                android:paddingVertical="10dp"
                                                android:paddingStart="10dp"
                                                android:paddingTop="10dp"
                                                android:paddingEnd="10dp"
                                                android:src="@drawable/ic_spin_1" />
                                        </LinearLayout>
                                    </RelativeLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/btnCustom"
                                    android:layout_width="match_parent"
                                    android:layout_height="110dp"
                                    android:layout_marginHorizontal="20dp"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/custom_bg_button"
                                            android:orientation="horizontal">


                                            <TextView
                                                android:id="@+id/tv_custom"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginHorizontal="20dp"
                                                android:layout_weight="2"
                                                android:fontFamily="@font/linotte_semi_bold"
                                                android:gravity="center_vertical|start"
                                                android:lineSpacingExtra="10dp"
                                                android:text="@string/custom_roulette"
                                                android:textColor="@color/black"
                                                android:textSize="22sp" />


                                            <ImageView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="2"
                                                android:adjustViewBounds="true"
                                                android:paddingStart="10dp"
                                                android:paddingTop="10dp"
                                                android:paddingEnd="10dp"
                                                android:src="@drawable/ic_spin_1" />
                                        </LinearLayout>
                                    </RelativeLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="30dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:id="@+id/ll_rate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:visibility="gone"
                                        android:background="@drawable/custom_bg_circle"
                                        android:gravity="center">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_rate_us"
                                            app:tint="@color/color_result"/>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/llShare"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:background="@drawable/custom_bg_circle"
                                        android:gravity="center">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_share"
                                            app:tint="@color/color_result"/>
                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:visibility="gone">

                                        <LinearLayout
                                            android:id="@+id/llContact"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="8dp"
                                            android:layout_marginTop="8dp"
                                            android:layout_marginEnd="8dp"
                                            android:layout_marginBottom="8dp"
                                            android:background="@drawable/custom_bg_circle"
                                            android:gravity="center">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/ic_more" />
                                        </LinearLayout>

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_marginTop="2dp"
                                            android:src="@drawable/ic_ads" />
                                    </RelativeLayout>

                                    <LinearLayout
                                        android:id="@+id/llLanguage"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:visibility="gone"
                                        android:background="@drawable/custom_bg_circle"
                                        android:gravity="center">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_lang_home"
                                            app:tint="@color/color_result"/>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/llPrivacy"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:background="@drawable/custom_bg_circle"
                                        android:gravity="center">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_policy"
                                            app:tint="@color/color_result"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.core.widget.NestedScrollView>

                        <LinearLayout
                            android:id="@+id/llBanner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#100F0F"
                            android:paddingTop="@dimen/_2sdp"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <FrameLayout
                                android:id="@+id/collapsible_banner_container_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                            </FrameLayout>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>
</layout>