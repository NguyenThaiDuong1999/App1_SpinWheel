<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:endColor="#496260"
                android:centerColor="#5E8660"
                android:startColor="#62B13B" />
            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />
            <size
                android:width="300dp"
                android:height="60dp" />
            <corners android:radius="30dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:endColor="#A1E179"
                android:centerColor="#64CD22"
                android:startColor="#4DC600" />
            <corners android:radius="30dp" />
            <size
                android:width="50dp"
                android:height="50dp" />
        </shape>
    </item>
</layer-list>