<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:endColor="#30F1F1F1"
                android:centerColor="#EF7F7F"
                android:startColor="#FB4848" />
            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />
            <size
                android:width="300dp"
                android:height="60dp" />
            <corners android:radius="30dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:endColor="#F3E3E3"
                android:centerColor="#F36D6D"
                android:startColor="#FB4848" />
            <corners android:radius="30dp" />
            <size
                android:width="50dp"
                android:height="50dp" />
        </shape>
    </item>
</layer-list>