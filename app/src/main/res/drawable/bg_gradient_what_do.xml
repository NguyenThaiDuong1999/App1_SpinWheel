<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:endColor="#49606C"
                android:centerColor="#60858E"
                android:startColor="#558D95" />
            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />
            <size
                android:width="300dp"
                android:height="60dp" />
            <corners android:radius="30dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:endColor="#9AD0D3"
                android:centerColor="#59B1B7"
                android:startColor="#3DA4AB" />
            <corners android:radius="30dp" />
            <size
                android:width="50dp"
                android:height="50dp" />
        </shape>
    </item>
</layer-list>