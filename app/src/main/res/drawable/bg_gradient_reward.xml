<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:endColor="#30F1F1F1"
                android:centerColor="#ED89C5"
                android:startColor="#FF5ABD" />
            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />
            <size
                android:width="300dp"
                android:height="60dp" />
            <corners android:radius="30dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:endColor="#E4F8D7EB"
                android:centerColor="#E4FF5ABD"
                android:startColor="#FF5ABD" />
            <corners android:radius="30dp" />
            <size
                android:width="50dp"
                android:height="50dp" />
        </shape>
    </item>
</layer-list>